<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.lkj.bicycleproject.SignUpActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FF29B6F6"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:text="회원 가입"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="30sp"
            android:textStyle="bold" />

    </RelativeLayout>


        <LinearLayout
            android:layout_below="@id/relativeLayout"
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <EditText
                        android:id="@+id/editId"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="70"
                        android:hint="아이디를 적어주세요."
                        android:textSize="15sp"
                        android:inputType="textUri"
                        android:lines="1"
                        android:maxLength="15"
                        android:digits="abcdefghijklmnopqrstuvwxyz0123456789"/>

                    <Button
                        android:id="@+id/button2"
                        android:layout_width="10dp"
                        android:layout_height="50dp"
                        android:layout_weight="20"
                        android:text="중복확인"
                        android:onClick="duplicationCheck"/>

            </LinearLayout>


                <LinearLayout
                    android:id="@+id/linearLayout7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <Spinner
                        android:id="@+id/spinnerAge"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="70"
                        android:spinnerMode="dialog"
                        android:prompt="@string/age_prompt"
                        style="@style/Base.Widget.AppCompat.Spinner.Underlined" />

                    <Button
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="20"
                        android:text="정보"
                        android:onClick="userId"
                        android:id="@+id/button3" />
                </LinearLayout>



            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linearLayout8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <Spinner
                        android:id="@+id/spinnerWeight"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="70"
                        android:spinnerMode="dialog"
                        android:prompt="@string/weight_prompt"
                        style="@style/Base.Widget.AppCompat.Spinner.Underlined"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*몸무게는 칼로리를 계산하는데 사용됩니다."
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </LinearLayout>

            <RadioGroup
                android:id="@+id/rg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioMan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Man" />

                <RadioButton
                    android:id="@+id/radioWoman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="Woman" />
            </RadioGroup>

    <LinearLayout
        android:id="@+id/linearLayout9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100">
        <ImageButton
            android:id="@+id/imageAdd"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="70"
            android:layout_marginTop="15dp"
            android:background="#f3f3f3"
            android:onClick="onImageClick"
            android:scaleType="fitXY"
            android:src="@drawable/ic_add_a_photo_black_24dp" />
        </LinearLayout>

        </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:onClick="signUp"
        android:text="회원가입하기"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
